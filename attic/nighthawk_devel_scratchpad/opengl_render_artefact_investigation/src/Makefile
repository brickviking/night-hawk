include ../config.user

######################################################################
all:
	make glitch

######################################################################
prep:
	make all
	cp -f glitch ..
	make clean

######################################################################
OBJS		= \
	misc.o \
	opengl.o \
	main.o

glitch: $(OBJS)
	$(CPP) $(CC_FLAGS) $(OBJS) -o glitch $(LIB_FLAGS)
	strip glitch

######################################################################
clean:
	rm -f *.o glitch

######################################################################
%.o: %.c
	$(CC) $(CC_FLAGS) -o $@ -c $<

%.o: %.cc
	$(CPP) $(CC_FLAGS) -o $@ -c $<
